<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer</title>
</head>

<body>
    <table width="500" border="1">
        <tr>
            <td>
                ID
            </td>
            <td>
                Name
            </td>
            <td>
                Age
            </td>
            <td>
                Email
            </td>
            <td>
                Address
            </td>
            <td>
                Action
            </td>
        </tr>

        <% list.rows.forEach(function(cus){ %>
            <tr>
                <td>
                    <%=cus.id%>
                </td>
                <td>
                    <%=cus.name%>
                </td>
                <td>
                    <%=cus.age%>
                </td>
                <td>
                    <%=cus.email%>
                </td>
                <td>
                    <%=cus.address%>
                </td>
                <td>
                    <button type="button"><a href="../customer/edit/<%=cus.ID%>">Edit</a></button>
                    <button type="button"><a href="../customer/delete/<%=cus.ID%>">Delete</a></button>
                </td>
            </tr>
            <% }); %>

    </table>
</body>

</html>